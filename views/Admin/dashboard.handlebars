
<section class="dashboard">

	<div>

		<h2 class="section-title">Welcome to the Dashboard, {{user.firstName}}</h2>

	</div>

	<section class="product-list">

		<table>

		    <thead>
		            <th>Title</th>
		            <th>Description</th>
		            <th>Price</th>
		            <th>Featured</th>
		            <th>Image</th>
		            <th>Category</th>
		            <th>Quantity</th>
		    </thead>

		    <tbody>
	        {{#each data}}
	            <tr>
	                <td>
	                    <a href="/product/{{this.id}}" class="product-title">{{this.title}}</a>
	                </td>
	                <td>
	                   <span>{{this.description}}</span>		                  
	                </td>
	                <td>
	                    <span>{{this.price}}</span>
	                </td>
	                <td>
	                    <span>{{this.featured}}</span>
	                </td>
	                <td>
	                   <span>{{this.imgPath}}</span>
	                </td>
	                <td>
	                   <span>{{this.category}}</span>
	                </td>
	                <td>
	                   <span>{{this.category}}</span>
	                </td>
	                <td>
	                    <a href="/product/edit/{{this.id}}" class="edit-delete-button"><span class="fa fa-pencil"></span></a>
	                    <a href="/product/delete/{{this.id}}?method=DELETE" class="edit-delete-button"><span class="fa fa-trash"></span></a>
	                </td> 
	            </tr>

	            {{else}}
	              <td colspan="5">
	                  <p>No products in the database yet</p>
	              </td>
	        {{/each}}

		    </tbody>
		</table>
	</section>

</section>