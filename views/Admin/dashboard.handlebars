
<section class="dashboard">

	<div>
		<h2 class="section-title">{{user.firstName}}'s Dashboard</h2>
		<button id="product-add" class="product-add">Add New Product</button>
	</div>

	<section class="product-list">

		<table class="dashboard-list">

		    <thead>
		            <th>Title</th>
		            <th>Description</th>
		            <th>Price</th>
		            <th title="Best Seller">Featured</th>
		            <th>Image</th>
		            <th>Category</th>
		            <th>Quantity</th>
		            <th colspan="2"></th>
		    </thead>

		    <tbody>
	        {{#each data}}
	            <tr>
	                <td>
	                    <a href="/product/{{this.id}}" class="product-title">{{this.title}}</a>
	                </td>
	                <td>
	                   <span>{{this.description}}</span>		                  
	                </td>
	                <td>
	                    <span>{{this.price}}</span>
	                </td>
	                <td>
	                    <span>
	                    	<input id="featured" class="featured" type="checkbox" id="switch" {{#ifeq this.featured true}} checked {{/ifeq}}/>
	                    	<label for="featured" class="switch-featured" for="switch">Toggle</label>
	                    </span>
	                </td>
	                <td>
	                   <span class="thumb-img-"><img class="thumb-img" src="/uploads/{{this.imgPath}}" alt="{{this.imgPath}}"></span>
	                </td>
	                <td>
	                   <span>{{this.category}}</span>
	                </td>
	                <td>
	                   <span>{{this.quantity}}</span>
	                </td>
	                <td>
	                    <a id="edit-ctrl" class="edit-ctrl" href="/product/edit/{{this.id}}" class="edit-delete-button"><span class="fa fa-pencil"></span></a>
	                </td>
	                <td>
	                    <a id="trash-ctrl" class="trash-ctrl" href="/product/delete/{{this.id}}?method=DELETE" class="edit-delete-button"><span class="fa fa-trash"></span></a>
	                </td> 
	            </tr>

	            {{else}}
	              <td colspan="5">
	                  <p>No products in the database yet</p>
	              </td>
	        {{/each}}

		    </tbody>
		</table>
	</section>

</section>