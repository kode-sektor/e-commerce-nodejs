                    </ul>

                    <ul class="user-related-links">
                        <li class="nav-search">
                            <span class="fa fa-search"></span>
                        </li>
                        <li>
                            {{#if user}}
                                <a id="profile" class="profile" href="/user/profile">Dashboard</span></a>
                            {{/if}}
                        </li>
                        <li> 
                            {{#if user}}
                                <a id="logout-btn" class="logout-btn" href="/logout">Logout</a>
                                {{else}}
                                <a id="login-create-account" href="/login"><span class="fa fa-user"></span></a>
                            {{/if}}
