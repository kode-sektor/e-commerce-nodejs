	
	<section class="details">

		<section class="details-container">

			<section class="hero-img-product">
				<figure>
					<img src="/uploads/products/{{imgPath}}">
				</figure>
			</section>

			<section class="product-details-container">
				<header>
					<h1 class="product-title">{{title}}</h1>
					<span class="star-featured">
						{{#ifeq featured "feature"}}
							<i class="fa fa-star"></i>
							<i class="fa fa-star"></i>
							<i class="fa fa-star"></i>
							<i class="fa fa-star"></i>
							<i class="fa fa-star"></i>
						{{/ifeq}}
					</span>
				</header>

				<article class="blurb">
					<p>{{description}}</p>
				</article>

				<span class="old-price"></span>
				<strong class="price">{{price}} $CAD</strong>

				<section class="cart">
					<a href="" title="Add to Collection">
						<span class="heart fa fa-heart"></span>
					</a>
					<a href="/" title="Add to Cart">
						<span class="shopping-cart  fa fa-shopping-cart"></span>
					</a>
				</section>

				<p class="quantity-stock">Quantity: <input type="number" class="quantity-form" value="1" step="1" min="0"></p>

				<p class="in-stock">In stock : <span class="stock-amt">{{quantity}}</span></p>

				<a class="purchase-btn cta-btn" href="/cart">Add to Cart</a>

			</section>

		</section>

	</section>